<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="horizontal" android:padding="10pt"
              android:background="@color/gray">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:background="@drawable/background">
        <ImageView
                android:layout_width="50pt"
                android:layout_height="50pt" app:srcCompat="@drawable/baboon" android:id="@+id/imageList"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Baboon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/TitleList" android:textSize="24sp"/>
            <TextView
                    android:text="description blablbalblablbalbalbalablabalabalbal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/subTitleList"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>